<!DOCTYPE html>
<%- include('../partials/head') %>

    <body>
        <%- include('../partials/header') %>
            <%- include('../partials/manager-sidebar') %>

                <main id="main" class="main">
                    <div class="d-flex top-clubs justify-content-between">
                        <div class="pagetitle">
                            <h1>Activities</h1>
                            <nav>
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/manager/dashboard">Home</a></li>
                                    <li class="breadcrumb-item"><a href="#">Management</a></li>
                                    <li class="breadcrumb-item active">My Activities</li>
                                </ol>
                            </nav>
                        </div>
                        <div class="search-bar">
                            <form class="search-form d-flex align-items-center justify-content-center" method="post">
                                <input type="text" name="query" placeholder="Search" title="Enter search keyword">
                                <button type="submit" title="Search"><i class="bi bi-search"></i></button>
                            </form>
                        </div>
                        <div class="button-add">
                            <a href="#add-activity" data-bs-dismiss="#" data-bs-toggle="modal"><button
                                    class="btn btn-primary"><i class="las la-plus fs-16"></i>Request New Activity</button></a>
                        </div>
                    </div>
                    <section class="section dashboard">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    <% activity.forEach(activity => { %>
                                        <div class="col-xxl-2 col-md-6">
                                            <a href="/manager/myactivity<%= activity._id %>">
                                                <div class="card-student">
                                                    <img src="../assets/img/activity/<%= activity.image %>" class="card-img-top">
                                                    <div class="card-body0">
                                                        <h5 class="card-title">
                                                            <%= activity.name %>
                                                        </h5>
                                                        <p>
                                                            <%= activity.about %>
                                                        </p>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                        <% }); %>
                                </div>
                            </div>
                            <!-- <div class="activity-pagination">
                                <ul class="pagination">
                                    <li class="page-item active" aria-current="page"><span class="page-link">1</span>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                </ul>
                                </nav>
                            </div> -->
                        </div>
                    </section>
                    </div>
                </main>

                <%- include('../partials/manager-modal-activity') %>
                    <%- include('../partials/footer') %>
                        <%- include('../partials/script') %>
    </body>

    </html>