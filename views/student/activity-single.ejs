<!DOCTYPE html>
<%- include('../partials/head') %>

    <body>
        <%- include('../partials/student-header') %>

            <main id="main-student">
                <div class="pagetitle">
                    <h1><%= activity.name %></h1>
                    <nav>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/student/homepage">Home</a></li>
                            <li class="breadcrumb-item"><a href="/student/activities">Activities</a></li>
                            <li class="breadcrumb-item active"><%= activity.name %></li>
                        </ol>
                    </nav>
                    <div class="card">
                        <div class="card-header d-flex">
                            <div class="col-xxl-12">
                                <h2><%= activity.name %></h2>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="mb-3 mt-3">
                                <div class="row g-0">
                                    <div class="col-md-4 single-club">
                                        <img src="../assets/img/activity/<%= activity.image %>" class="img-fluid rounded-start" alt="...">
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card-body">
                                            <h5 class="card-title">About</h5>
                                            <p class="card-text"><%= activity.about %></p>
                                            <br><br>
                                            <h5><b>Event Date and Time</b></h5>
                                            <p><%= activity.date %></p>
                                            <h5><b>Place</b></h5>
                                            <p><%= activity.place %></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>


            </main>

            <%- include('../partials/modal') %>
                <%- include('../partials/footer') %>
                    <%- include('../partials/script') %>
    </body>

    </html>