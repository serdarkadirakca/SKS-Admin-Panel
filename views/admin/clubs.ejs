<!DOCTYPE html>
<%- include('../partials/head') %>

    <body>
        <%- include('../partials/header') %>
            <%- include('../partials/sidebar') %>

                <main id="main" class="main">
                    <div class="d-flex top-clubs justify-content-between">
                        <div class="pagetitle">
                            <h1>Clubs</h1>
                            <nav>
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
                                    <li class="breadcrumb-item active">Clubs</li>
                                </ol>
                            </nav>
                        </div>
                        <div class="search-bar">
                            <form class="search-form d-flex align-items-center justify-content-center" method="post" enctype="multipart/form-data">
                                <input type="text" name="query" placeholder="Search" title="Enter search keyword">
                                <button type="submit" title="Search"><i class="bi bi-search"></i></button>
                            </form>
                        </div>
                        <div class="button-add">
                            <a href="#add-club" data-bs-dismiss="#" data-bs-toggle="modal"><button
                                    class="btn btn-primary"><i class="las la-plus fs-16"></i> Create New
                                    Club</button></a>
                        </div>
                    </div>
                    <section class="section dashboard">
                        <div class="col-xxl-12">
                            <div class="row">
                                <% club.forEach(club => { %>
                                    <div class="col-xxl-2">
                                        <a href="/admin/club<%= club._id %>">
                                            <div class="club-card">
                                                <img class="rounded-circle" src="../assets/img/club/<%= club.image %>">
                                                <br>
                                                <p>
                                                    <%= club.name %>
                                                </p>
                                            </div>
                                        </a>
                                    </div>
                                    <% }); %>
                            </div>
                        </div>
                        <!-- <div class="club-pagination">
                            <ul class="pagination">
                                <li class="page-item active" aria-current="page"><span class="page-link">1</span>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                            </ul>
                            </nav>
                        </div> -->
                    </section>
                </main>
                <%- include('../partials/modal-club') %>
                    <%- include('../partials/footer') %>
                        <%- include('../partials/script') %>
    </body>

    </html>